@{
    ViewBag.Title = "Confirmación de recuperación de contraseña";
    Layout = "~/Views/Shared/_AdminLTELogin.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Gesti</b>Log</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">@ViewBag.Title</p>
        <div>
            <p>
                Se le ha enviado un mensaje a su cuenta de correo electrónico para restablecer la contraseña.
            </p>
        </div>
        <i class="fa fa-undo"></i> @Html.ActionLink("Volver al login!", "Login", null, new { @class = "text-center" })
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
