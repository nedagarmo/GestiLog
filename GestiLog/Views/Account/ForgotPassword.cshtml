@model GestiLog.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidó la contraseña?";
    Layout = "~/Views/Shared/_AdminLTELogin.cshtml";
}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Gesti</b>Log</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">@ViewBag.Title</p>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <h4>Especifique su correo electrónico.</h4>
            <hr />
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", @type = "Email" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="row pull-right">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-flat">Recuperar Contraseña</button>
                </div>
            </div>
        }
        <i class="fa fa-undo"></i> @Html.ActionLink("Tengo mi contraseña!", "Login", null, new { @class = "text-center" })
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
